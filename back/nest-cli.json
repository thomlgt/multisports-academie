{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "controllerKeyOfComment": "summary",
          "introspectComments": true
        }
      }
    ],
    "assets": [
      "modules/mail/templates/**/*",
      "modules/mail/images/*"
    ],
    "watchAssets": true
  }
}
